{
  "name": "gaalferov/php-ext-domain-connect",
  "description": "PHP extension for Domain Connect",
  "authors": [
    {
      "name": "Hennadii Alforov",
      "email": "a@gaalferov.com"
    }
  ],
  "type": "project",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "DomainConnect\\": "src/",
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.0",
    "ext-json": "*",
    "ext-openssl": "*",
    "guzzlehttp/guzzle": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "scripts": {
    "tests": "vendor/bin/phpunit",
    "cs-audit": "vendor/bin/php-cs-fixer fix -v --diff --dry-run",
    "cs-fix": "vendor/bin/php-cs-fixer fix -v --diff"
  }
}
